@model IEnumerable<HeavenlyHome_Models.AddressModels.AddressListItems>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-danger">Address List</h2>
<hr />
<p>
    @Html.ActionLink("Add New Address", "Create", null, new { @class="btn btn-dark"})
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AddressID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FloorPlanID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAvailable)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddressID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FloorPlanID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AddressID }) |
                @Html.ActionLink("Details", "Details", new { id = item.AddressID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AddressID })
            </td>
        </tr>
    }

</table>
